{
  "manifest_version": 3,
  "name": "ZennFlow",
  "description": "Focus better with a clean dashboard and a dedicated focus mode.",
  "version": "1.0.0",
  "action": {
    "default_title": "ZennFlow",
    "default_popup": "index.html"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "service_worker": "./src/background.js",
    "type": "module"
  },
  "permissions": ["storage", "alarms", "notifications"],
  "host_permissions": [],
  "icons": {
    "16": "public/icons.png",
    "48": "public/icons.png",
    "128": "public/icons.png"
  }
}
